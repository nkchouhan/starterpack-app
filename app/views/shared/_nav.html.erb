<%= nav_bar :static => :top, :brand => image_tag("logo.png", height: '45px'), :responsive => true do %>
  <%= menu_group :pull => :right do %>
    <% if user_signed_in? %>
      <%= menu_item "Home", root_path %>
      <%= menu_item "FAQ", "#" %>
      <%#binding.pry%>
      <%= drop_down current_user.first_name.titlecase do %>
        <%= menu_item "#" do%>
          <i class="fa fa-pencil-square-o"> Edit Profile</i>
        <% end %>
        <%= menu_item "#" do %>
          <i class="fa fa-user"> View Profile</i>
        <% end %>
        <%= menu_item destroy_user_session_path, "", {method: 'delete'} do%>
          <i class="fa fa-arrow-circle-left"> Logout</i>
        <% end %>
      <% end %>
    <% else %>
      <%= menu_item "Log In", new_user_session_path %>
    <% end %>
  <% end %>
<% end %>
