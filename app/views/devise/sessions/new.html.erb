<div id="logmsk" style="display: block;" class = 'margin-top-5p'>
    <div id="userbox">
        <h1 id="signup">Login</h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>        
          <%= f.email_field :email, autofocus: true, placeholder: "Email", style: "opacity: 1; background-color: rgb(255, 255, 255); background-position: initial initial; background-repeat: initial initial;", id: 'name' %>
          
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', style: "opacity: 1; background-color: rgb(255, 255, 255); background-position: initial initial; background-repeat: initial initial;", id: 'pass' %>
          <%= f.submit "Login", id: "signupb", class: "btn btn-danger" %>
        <%end%>
        <%= render "devise/shared/links" %>
      <div class='clearfix'></div>  
    </div>
</div>

